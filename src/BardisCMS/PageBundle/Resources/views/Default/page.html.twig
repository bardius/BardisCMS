{% extends '::base.html.twig' %}

{% block title %}{{ page.pagetitle }}{% endblock %}
{% block metaDescription %}{{ page.description }}{% endblock %}
{% block metaKeywords %}{{ page.keywords }}{% endblock %}
{% block metaAuthor %}{{ page.metaAuthor }}{% endblock %}

{% block OgTitle %}{{ page.pagetitle }}{% endblock %}
{% block OgSiteName %}{{ page.pagetitle }}{% endblock %}
{% block metaOgDescription %}{{ page.description }}{% endblock %}

{% block siteLogoTitle %}{{ page.pagetitle }}{% endblock %}
{% block siteLogoKeywords %}{{ page.keywords }}{% endblock %}
{% block siteLogoDescription %}{{ page.title }} {{ page.description }}{% endblock %}

{% block body_start %}
    {#
    {% if page.bannercontentblocks|length > 0 %}
        <div class="pageTopBanner">
            {% include 'PageBundle:Contents:bannercontentblocks.html.twig' with {contentblocks: page.bannercontentblocks %}
        </div>
    {% endif %}
    #}
{% endblock %}

{% block content %}
    {% if page.bannercontentblocks|length > 0 %}
        {% include 'PageBundle:Contents:bannercontentblocks.html.twig' with {contentblocks: page.bannercontentblocks} %}
    {% endif %}
    {% if page.pagetype == 'one_columned' %}
        <div class="large-12 small-12 columns websitePage {% if page.pageclass is not null %}{{ page.pageclass }}{% endif %}">
            <div class="row">
                {% if page.showPageTitle == 1 %}
                    <div class="large-12 small-12 columns pageTitle">
                        <h2>{{ page.title }}</h2>
                    </div>
                {% endif %}
                <div class="large-12 small-12 columns pageText">
                    <div class="row">
                        {% include 'PageBundle:Contents:maincontentblocks.html.twig' with {contentblocks: page.maincontentblocks} %}
                    </div>
                </div>
            </div>
        </div>
    {% elseif page.pagetype == 'two_columned' %}
        <div class="large-12 small-12 columns websitePage {% if page.pageclass is not null %}{{ page.pageclass }}{% endif %}">
            <div class="row">
                {% if page.showPageTitle == 1 %}
                    <div class="large-12 small-12 columns pageTitle">
                        <h2>{{ page.title }}</h2>
                    </div>
                {% endif %}
                <div class="large-12 small-12 columns pageText">
                    <div class="row">
                        <div class="large-7 small-12 columns">
                            <div class="row">
                                {% include 'PageBundle:Contents:maincontentblocks.html.twig' with {contentblocks: page.maincontentblocks} %}
                            </div>
                        </div>
                        <div class="large-5 small-12 columns">
                            <div class="row">
                                {% include 'PageBundle:Contents:secondarycontentblocks.html.twig' with {contentblocks: page.secondarycontentblocks} %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% elseif page.pagetype == 'contact' %}
        <div class="large-12 small-12 columns websitePage contactPage {% if page.pageclass is not null %}{{ page.pageclass }}{% endif %}">
            <div class="row">
                {% if page.showPageTitle == 1 %}
                    <div class="large-12 small-12 columns pageTitle">
                        <h2>{{ page.title }}</h2>
                    </div>
                {% endif %}
                <div class="large-12 small-12 columns pageText">
                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <div class="row">
                                {% include 'PageBundle:Contents:maincontentblocks.html.twig' with {contentblocks: page.maincontentblocks} %}
                            </div>
                        </div>
                        <div class="large-12 small-12 columns">
                            <div class="row">
                                {% include 'PageBundle:Contents:secondarycontentblocks.html.twig' with {contentblocks: page.secondarycontentblocks} %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% elseif page.pagetype == 'three_columned' %}
        <div class="large-12 small-12 columns websitePage {% if page.pageclass is not null %}{{ page.pageclass }}{% endif %}">
            <div class="row">
                {% if page.showPageTitle == 1 %}
                    <div class="large-12 small-12 columns pageTitle">
                        <h2>{{ page.title }}</h2>
                    </div>
                {% endif %}
                <div class="large-12 small-12 columns pageText">
                    <div class="row">
                        <div class="large-4 small-12 columns">
                            <div class="row">
                                {% include 'PageBundle:Contents:maincontentblocks.html.twig' with {contentblocks: page.maincontentblocks} %}
                            </div>
                        </div>
                        <div class="large-4 small-12 columns">
                            <div class="row">
                                {% include 'PageBundle:Contents:secondarycontentblocks.html.twig' with {contentblocks: page.secondarycontentblocks} %}
                            </div>
                        </div>
                        <div class="large-4 small-12 columns">
                            <div class="row">
                                {% include 'PageBundle:Contents:extracontentblocks.html.twig' with {contentblocks: page.extracontentblocks} %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% elseif page.pagetype == 'sitemap' %}
        <div class="large-12 small-12 columns websitePage {% if page.pageclass is not null %}{{ page.pageclass }}{% endif %}">
            <div class="row">
                {% if page.showPageTitle == 1 %}
                    <div class="large-12 small-12 columns pageTitle">
                        <h2>{{ page.title }}</h2>
                    </div>
                {% endif %}
                <div class="large-12 small-12 columns pageText">
                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <div class="row">
                                {% include 'PageBundle:Contents:maincontentblocks.html.twig' with {contentblocks: page.maincontentblocks} %}
                            </div>
                        </div>
                        <div class="large-12 small-12 columns">
                            <h3>Main menu</h3>
                            {{ knp_menu_render('mainsitemap') }}
                            <h3>Secondary menu</h3>
                            {{ knp_menu_render('footersitemap') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% elseif page.pagetype == 'homepage' %}
        <div class="large-12 small-12 columns homePage">
            <div class="row">
                {% if page.showPageTitle == 1 %}
                    <div class="large-12 small-12 columns pageTitle">
                        <h2>{{ page.title }}</h2>
                    </div>
                {% endif %}
                {% if page.maincontentblocks is not empty %}
                    <div class="large-12 small-12 columns pageText">
                        <div class="row collapse">
                            {% include 'PageBundle:Contents:maincontentblocks.html.twig' with {contentblocks: page.maincontentblocks} %}
                        </div>
                    </div>
                {% endif %}
                {% if pages %}
                    <div class="large-12 small-12 columns {{ page.pagetype }}List">
                        <div class="row homepageListing">
                            {% include 'PageBundle:Contents:homepage-list.html.twig' with {'pages': pages, 'mobile': mobile} %}
                        </div>
                    </div>
                {% endif %}
                {% if page.secondarycontentblocks is not empty %}
                    <div class="large-12 small-12 columns pageText">
                        <div class="row collapse">
                            {% include 'PageBundle:Contents:secondarycontentblocks.html.twig' with {contentblocks: page.secondarycontentblocks} %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% elseif page.pagetype == 'category_page' or page.pagetype == 'page_tag_list' %}
        <div class="large-12 small-12 columns categoryPage">
            <div class="row">
                {% if page.showPageTitle == 1 %}
                    <div class="large-12 small-12 columns">
                        <h2>{{ page.title }}</h2>
                    </div>
                {% endif %}
                {% if page.maincontentblocks is not empty %}
                    <div class="large-12 small-12 columns pageText">
                        <div class="row">
                            {% include 'PageBundle:Contents:maincontentblocks.html.twig' with {contentblocks: page.maincontentblocks} %}
                        </div>
                    </div>
                {% endif %}
                <div class="large-12 small-12 columns {{ page.pagetype }}List">
                    <div class="row">
                        {% if page.pagetype == 'page_tag_list' %}
                            {% include 'PageBundle:Contents:filterPagesFormHolder.html.twig' %}
                        {% endif %}
                        <div class="large-12 small-12 columns categoryListing">
                            <div class="row">
                                {% if pages %}
                                    {% for pageItem in pages %}
                                        <div class="large-6 small-12 columns categoryListingItem">
                                            {% if pageItem.pagetype == 'blog_home' or pageItem.pagetype == 'blog_article' %}
                                                {% include 'PageBundle:Contents:page-list-blog-item.html.twig' %}
                                            {% else %}
                                                {% include 'PageBundle:Contents:page-list-item.html.twig' %}
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    {% include 'PageBundle:Contents:no-results.html.twig' %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% if page.secondarycontentblocks is not empty %}
                    <div class="large-12 small-12 columns pageText">
                        <div class="row">
                            {% include 'PageBundle:Contents:secondarycontentblocks.html.twig' with {contentblocks: page.secondarycontentblocks} %}
                        </div>
                    </div>
                {% endif %}
                {% if page.pagetype == 'category_page' %}
                    {% include 'PageBundle:Contents:pagination.html.twig' %}
                {% elseif page.pagetype == 'page_tag_list' %}
                    {% include 'PageBundle:Contents:tags-pagination.html.twig' %}
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="large-12 small-12 columns">
            <div class="row">
                {% if page.showPageTitle == 1 %}
                    <div class="large-12 small-12 columns">
                        <h2>{{ page.title }}</h2>
                    </div>
                {% endif %}
                {% if page.maincontentblocks is not empty %}
                    <div class="large-12 small-12 columns">
                        {% include 'PageBundle:Contents:maincontentblocks.html.twig' with {contentblocks: page.maincontentblocks} %}
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block gAnalytics %}
    {% include 'PageBundle:Contents:ga.html.twig' %}
{% endblock %}

{% block modal %}
    {% include 'PageBundle:Contents:modalcontentblocks.html.twig' with {contentblocks: page.modalcontentblocks} %}
{% endblock %}
