{% if page.showPageTitle == 1 %}
<div class="large-12 small-12 columns pageSummary">
    <h2>{{ page.title }}</h2>
    <small class="date">
		Date Posted:  
		<span class="day">{{ page.date|date("d") }}</span>
		<span class="month">{{ page.date|date("M") }}</span>
		<span class="year">{{ page.date|date("Y") }}</span>
	</small>
	<p class="tagList">
		Tags: 
		{% for title in page.tags %}
			<a class="tag" href="{{ app.request.getBaseURL() }}/blog/tagged/{{ title|url_encode() }}" title="{{ title }}">
				{{ title }} 
            </a> 
        {% endfor %} 
    </p>
</div>
{% endif %}
{% if page.bannercontentblocks|length > 0 %}
<div class="large-12 small-12 columns pageDescription">
	<div class="row">
		{% include 'BlogBundle:Contents:bannercontentblocks.html.twig' %}
	<div>
</div>
{% endif %}
<div class="large-12 small-12 columns pageText">
	<div class="row">
		{% include 'BlogBundle:Contents:maincontentblocks.html.twig' %}
	</div>
</div>
{% include 'BlogBundle:Contents:smo_share.html.twig' %}
{% if form is defined %}
<section class="comments large-12 small-12 panel columns" id="comments">	
	<div class="row">
		<h3>Comments</h3>
		<div class="large-12 small-12 comments-form columns">
			{% include 'CommentBundle:BlogType:commentForm.html.twig' %}
		</div>
		{% if comments|length > 0 %}
		<div class="large-12 small-12 previous-comments columns">
			{% include 'CommentBundle:BlogType:commentList.html.twig' with { 'comments': comments } %}
		</div>
		{% endif %}
    </div>
</section>
{% endif %}