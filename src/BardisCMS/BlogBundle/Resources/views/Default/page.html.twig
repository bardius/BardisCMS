{% extends '::base.html.twig' %}

{% block title %}{{ page.pagetitle }}{% endblock %}
{% block metaDescription %}{{ page.description }}{% endblock %}
{% block metaKeywords %}{{ page.keywords }}{% endblock %}
{% block metaAuthor %}{{ page.metaAuthor }}{% endblock %}

{% block OgTitle %}{{ page.pagetitle }}{% endblock %}
{% block OgSiteName %}{{ page.pagetitle }}{% endblock %}
{% block metaOgDescription %}{{ page.description }}{% endblock %}

{% block siteLogoTitle %}{{ page.pagetitle }}{% endblock %}
{% block siteLogoKeywords %}{{ page.keywords }}{% endblock %}
{% block siteLogoDescription %}{{ page.title }} {{ page.description }}{% endblock %}


{% block body_start %}
    <div class="topBg">
        <div class="row">
            <div class="large-12 small-12 columns topBgImg blogTopBgImg" {% if page.bgimage is not empty %}style="background-image: url({% path page.bgimage.id,  'big' %});"{% endif %}>            
            </div>
        </div>
    </div>
{% endblock %}
    
{% block content %}
<div class="large-12 small-12 columns blogPage blogArticlePage{% if page.pageclass is not null %}{{ page.pageclass }}{% endif %}">
    <div class="row blogArticleText">
        <div class="large-5 small-12 push-7 columns categoryListingItem">
            <div class="large-12 small-12 columns pageSummary">
                <h2>Welcome To Our Blog</h2>
                <div class="contentBlock large-12 small-12 columns">
                    <h4>Join the conversation</h4>
                    <ul class="blogSmoIcons">
						<li>
							<a target="_blank" href="http://www.facebook.com/fbpagename" title="Facebook" class="smoIcon fbIcon">
								<span>Facebook</span>
							</a>
						</li>
						<li>
							<a target="_blank" href="http://twitter.com/twiteraccountname" title="Twitter" class="smoIcon tweetIcon">
								<span>Twitter</span>
							</a>
						</li>
						<li>
							<a target="_blank" href="/register" title="Newsletter Subscribe" class="smoIcon mailIcon">
								<span>Newsletter Subscribe</span>
							</a>
						</li>
                    </ul>
                </div>
			</div>
        </div>
    </div>	
    {% if page.pagetype == 'blog_article' %}
        <div class="row">
            {% include 'BlogBundle:Contents:blog-article.html.twig' %}            
        </div>
    {% elseif page.pagetype == 'blog_cat_page' or page.pagetype == 'blog_filtered_list' or  page.pagetype == 'blog_home' %} 
		{% if page.maincontentblocks is not empty %}
		<div class="row pageText">
			{% include 'BlogBundle:Contents:maincontentblocks.html.twig' %}
        </div>
        {% endif %}
        {% if page.pagetype == 'blog_filtered_list' %} 
        <div class="row"> 
            {% include 'BlogBundle:Contents:filterBlogPostsFormHolder.html.twig' %}
        </div>
        {% endif %}
        <div class="row {{ page.pagetype }} itemsList categoryListing">      
			{% if pages %}
            {% for pageItem in pages %}
				{% if loop.index0 == 0 %}
                <div class="large-6 small-12 columns categoryListingItem categoryListingItem{{ loop.index0 }}">
					<div class="row">
						{% include 'BlogBundle:Contents:page-list-item.html.twig' %}
					</div>
                </div>   
                {% else %}
                <div class="large-6 small-12 columns categoryListingItem categoryListingItem{{ loop.index0 }} {% if loop.index0 is odd %}{% endif %}">
					<div class="row">
						{% include 'BlogBundle:Contents:page-list-item.html.twig' %}
					</div>
                </div> 
                {% endif %}                    
            {% endfor %}
        {% endif %}
        </div>
        {% if page.pagetype == 'blog_filtered_list' %} 
            {% include 'BlogBundle:Contents:tags-pagination.html.twig' %}
        {% else %} 
            {% include 'BlogBundle:Contents:pagination.html.twig' %}            
        {% endif %} 
		{% if page.extracontentblocks is not empty %}
		<div class="row belowPageText">
			{% include 'BlogBundle:Contents:extracontentblocks.html.twig' %}
        </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}

{% block gAnalytics %}{% include 'PageBundle:Contents:ga.html.twig' %}{% endblock %}

{% block modal %}
    {% include 'BlogBundle:Contents:modalcontentblocks.html.twig' %}
{% endblock %}