{% for comment in comments %}
    <div class="row comment {{ cycle(['odd', 'even'], loop.index0) }}">
        <div class="large-12 small-12 columns panel" id="comment-{{ comment.id }}">
            <h4>{{ comment.title }}</h4>
            <p>
                <span class="highlight">{{ comment.username }}</span> commented <time datetime="{{ comment.created|date('c') }}">{{ comment.created|date('l, F j, Y') }}</time>
            </p>
            <p>{{ comment.comment|striptags }}</p>
        </div>
    </div>
{% else %}
    <p>There are no comments for this post. Be the first to comment...</p>
{% endfor %}