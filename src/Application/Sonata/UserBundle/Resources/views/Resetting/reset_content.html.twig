<div class="row">
        <div class="large-12 small-12 columns">
        {{ form_start(form, {'action': path('sonata_user_resetting_reset', {'token': token}), 'method': 'POST', 'attr': {'id': 'sonata_user_resetting_form', 'novalidate': 'novalidate'} }) }}
            <div class="row">
                {{ form_widget(form) }}

                <div class="large-12 small-12 columns">
                    {% if formMessage is defined %}
                        <small class="form-message error">
                            {{ formMessage }}
                        </small>
                    {% endif %}
                    <button type="submit" name="submit" id="userResetFormBtn" class="button">
                        {{ 'resetting.reset.submit'|trans({}, 'SonataUserBundle') }}
                    </button>
                </div>
                <div class="large-12 small-12 columns">
                    <a class="button" href="{{ url('sonata_user_registration_register') }}" title="{{ 'layout.link.create_account'|trans({}, 'SonataUserBundle') }}">
                        {{ 'layout.link.create_account'|trans({}, 'SonataUserBundle') }}
                    </a>
                </div>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
